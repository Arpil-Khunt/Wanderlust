<% layout("./layouts/boilerplate") -%>
<style>
  body {
    background-color: #f4f4f4;
  }
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: fit-content;
  }
  .login h1 {
    text-align: center;
    color: #fa434e;
    display: inline;
  }
  .login {
    background-color: #fff;
    width: fit-content;
    padding: 30px 0px;
    border-radius: 16px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    display: flex;
    justify-content: center;
  }
  .data {
    padding-top: 13px;
  }
</style>
<div class="row mt-3 login">
  <h1>login on wanderlust</h1>
  <div class="col-6 data">
    <form method="POST" action="/login" class="needs-validation" novalidate>
      <div class="mb-3">
        <label class="form-label" for="username">Username :</label>
        <input
          class="form-control"
          type="text"
          name="username"
          id="username"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="password">Password :</label>
        <input
          class="form-control"
          type="password"
          name="password"
          id="password"
          required
        />
        <div class="invalid-feedback">enter valid password!</div>
      </div>
      <button class="btn btn-success mb-3">login</button>
      <p style="text-align: center">
        New to Wanderlust? &nbsp;&nbsp;<a
          href="/signup"
          style="text-decoration: none; color: #fa434e; font-weight: 600"
          >Sign Up</a
        >
      </p>
    </form>
  </div>
</div>
