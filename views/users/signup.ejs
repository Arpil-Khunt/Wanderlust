<% layout("./layouts/boilerplate") -%>

<div class="row mt-3">
  <h1 class="offset-3">SignUp on wanderlust</h1>
  <div class="col-6 offset-3">
    <form method="POST" action="/signup" class="needs-validation" novalidate>
      <div class="mb-3">
        <label class="form-label" for="username">Username :</label>
        <input
          class="form-control"
          type="text"
          name="username"
          id="username"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="email">Email :</label>
        <input
          class="form-control"
          type="email"
          name="email"
          id="email"
          required
        />
        <div class="invalid-feedback">enter email!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="password">Password :</label>
        <input
          class="form-control"
          type="password"
          name="password"
          id="password"
          required
        />
        <div class="invalid-feedback">enter valid password!</div>
      </div>
      <button class="btn btn-success mb-3">SignUp</button>
    </form>
  </div>
</div>
